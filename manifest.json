{
  "manifest_version": 2,
  "name": "image-downloader",
  "description": "original tool by \"twitter-image-helper\", testing...",
  "version": "0.1.4",

  "background": {
    "scripts": ["background.js"]
  },
  
  "permissions": [
    "contextMenus",
    "activeTab",
    "downloads"
  ],
  "content_scripts": [{
    "matches": ["*://*/*"],
    "all_frames": true,
    "js": ["content_scripts/menu_info.js"]
  }]
}
